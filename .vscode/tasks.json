    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build C++ Project",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "src/main.cpp",
                "src/asymmetric_block.cpp",
                "src/symmetric_block.cpp",
                "src/philosophers.cpp",
                "-o",
                "bin/main.exe",
